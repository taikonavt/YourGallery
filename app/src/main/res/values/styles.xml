<resources>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light">
    </style>

    <style name="MyAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme1" parent="MyAppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark1</item>
        <item name="colorAccent">@color/colorAccent1</item>
    </style>

    <style name="AppTheme2" parent="MyAppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorAccent2</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ExitTextHintStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="EditTextStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@android:color/holo_purple</item>
    </style>
    
    <style name="MyErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="fabStyle1" parent="@style/Widget.AppCompat.Button">
        <item name="android:tint">@color/onColorAccent1</item>
    </style>

    <style name="fabStyle2" parent="@style/Widget.AppCompat.Button">
        <item name="android:tint">@color/onColorAccent2</item>
    </style>
</resources>
